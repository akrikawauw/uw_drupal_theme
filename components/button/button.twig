{%
  set link_classes = [
  'btn',
  size == 'large' ? 'btn-lg' : 'btn-sm',
  style is not empty ? style,
  style not in ['primary', 'secondary'] ? 'arrow',
  color is not empty ? color : 'purple'
]
%}
{% set arrow_box_classes = [
  style == 'arrow' ? 'arrow' : '',
  style == 'plus' ? 'icon ic-plus' : '',
  style == 'play' ? 'icon ic-play' : ''
]
%}
{# {% set classes = 'btn btn-lg arrow purple' %} #}

<a{{create_attribute({'href':link}).addClass(link_classes)}}>
  <span>
    {{text}}
  </span>
  {% if style not in ['primary', 'secondary'] %}
    <span class="arrow-box">
      <span{{create_attribute().addClass(arrow_box_classes)}}></span>
    </span>
  {% endif %}
</a>
